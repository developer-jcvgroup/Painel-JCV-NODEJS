    }

    let indexColors;
    if(Cookies.get('root-vars-colors') != undefined){
        const arryaColorSet = Cookies.get('root-vars-colors')
        $(':root').css(JSON.parse(arryaColorSet))
        
        $("#button-action-dark-mode").prop('checked', true)
