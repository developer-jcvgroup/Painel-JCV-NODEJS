<section class="edit-form-new-users-main" id="edit-form-new-users-main">
    <div class="edit-form-new-users-box">
        <div class="edit-form-new-users-box-title">
            <span>Adicionar usuários</span>
            <i id="edit-form-close-users" class="ri-close-line"></i>
        </div>
        <!--  -->
        <div class="edit-form-new-users-box-search-box">
            <input type="text" placeholder="Procure por um usuario, groupo, departamento, unidade.." id="input-search-users">
        </div>
        <!--  -->
        <div class="edit-form-new-users-box-cont">

            <table class="edit-form-new-users-box-table">
                <thead>
                    <tr>
                        <th><input type="checkbox" name="" id="check-all-checkboxs"></th>
                        <th>Usuario</th>
                        <th>Departamento</th>
                        <th>Unidade</th>
                        <th>Classificado</th>
                    </tr>
                </thead>
                <tbody id="edit-form-new-users-box-table-tbody">
                    <% let arrayConvert = JSON.parse(infoFormulario[0].jcv_formularios_registers_users) %>

                    <% allUsersSystem.forEach(element => { %>
                    <tr>
                        <% if(arrayConvert.indexOf(element.jcv_id) > -1){ %>
                        <td><input type="checkbox" checked class="check-checkboxs-action" value="<%= element.jcv_id %>" name="checkbox-values-check"></td>
                        <% }else{ %>
                        <td><input type="checkbox" class="check-checkboxs-action" value="<%= element.jcv_id %>" name="checkbox-values-check"></td>
                        <% } %>

                        <td><%= element.jcv_userNamePrimary %></td>
                        <td><%= element.sys_department_name %></td>
                        <td><%= element.sys_unity_name %></td>

                        <% if(element.jcv_userCassification == 1){ %>
                            <td>Master</td>
                        <% }else if(element.jcv_userCassification == 2){ %>
                            <td>Gestor</td>
                        <% }else if(element.jcv_userCassification == 3){ %>
                            <td>Colaborador Interno</td>
                        <% }else if(element.jcv_userCassification == 4){ %>
                            <td>Representantes</td>
                        <% }else if(element.jcv_userCassification == 5){ %>
                            <td>Promotoras</td>
                        <% }else if(element.jcv_userCassification == 6){ %>
                            <td>Jovem Aprendiz</td>
                        <% } %>

                    </tr>
                    <% }) %>
                </tbody>
            </table>
            
        </div>
    </div>
</section>
