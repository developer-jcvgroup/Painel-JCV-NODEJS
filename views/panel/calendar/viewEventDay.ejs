<link rel="stylesheet" href="/panel/css/calendar/viewRoom.css">
<section class="view-room-main-section">
    <section class="view-room-section-viewer-view-room">
        <div class="view-room-calendar-box">
            <div class="view-room-back-calendar"><a href="/painel/calendario/main/<%= dayComp.split('/')[1] %>/<%= dayComp.split('/')[2] %>"><i class="ri-arrow-left-line"></i></a></div>
            <div class="view-room-title-day"><span><%= dayComp %></span><span>Total de <b><%= roomInfo.length %></b> eventos registrados</span></div>
            <div class="view-room-calendar-cont-main">
                <div class="view-room-row-container">

                    <% roomInfo.forEach(element => { %>
                    <div class="view-room-container-events">
                        <div class="view-room-info-row">
                            <div class="view-room-icon"><i class="ri-calendar-check-line"></i></div>
                            <div class="view-room-title-event">
                                <span><a class="class-loader" href="/painel/calendario/event/<%= element.sys_calendar_eventId %>/<%= element.sys_calendar_eventDate %> "><%= element.sys_calendar_eventName %></a></span>
                                <span><b><%= element.sys_calendar_eventDate %></b> - <%= element.sys_calendar_eventHours %></span>
                            </div>
                        </div>
                        <div class="view-room-info-row-col">
                            <div class="view-room-container-desc">
                                <span>Local</span>
                                <span><%= element.sys_unity_name %></span>
                            </div>
                            <div class="view-room-container-desc">
                                <span><b>Sala: </b> <span style="padding: 4px 6px; border-radius: 4px; border: 1.5px solid <%= element.sys_calendar_roomColor %>;"><a class="class-loader" style="text-decoration: none; color: <%= element.sys_calendar_roomColor %>" href="/painel/calendario/viewRoom/<%= element.sys_calendar_roomId %>"><%= element.sys_calendar_roomName %></a></span></span>
                            </div>
                            <div class="view-room-container-desc">
                                <% if(element.sys_calendar_eventPublic == 0) { %>
                                    <span><b>Evento Privado</b></span>
                                <% }else{ %>
                                    <span>Descrição:</span>
                                    <span><%= element.sys_calendar_eventDescription %></span>
                                <% } %>
                            </div>
                            <div class="view-room-container-desc">
                                <span>Participantes:</span>
                                <div class="view-room-box-user">
                                    <% if(element.sys_calendar_eventPersons == ''){ %>
                                        <span>Somente o criador é participante</span>
                                    <% }else{ %>

                                        <% let arrayUsersGet = element.sys_calendar_eventPersons.split(',') %>

                                        <% userAll.forEach(elementTo => { %>
                                            
                                            <% if(arrayUsersGet.indexOf(''+elementTo.jcv_id) > -1){ %>
                                                <span>
                                                    <div class="view-box-img-user">
                                                        <img src="<%= elementTo.jcv_userImageIcon %>" alt="">
                                                    </div>
                                                    <b style="margin-left: 5px;"><%= elementTo.jcv_userNamePrimary %></b>
                                                </span>
                                            <% } %>

                                        <% }) %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>


