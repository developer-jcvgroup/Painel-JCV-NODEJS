<script>
    $(function(){
        //Input mask
        $('#insert-cpf').mask('000.000.000-00');
        $(".user-insert-cpf").mask('000.000.000-00');

        if(Cookies.get('SEARCH-INPUT')){
            $("#input-search-table").val(Cookies.get('SEARCH-INPUT'))   
        }

        //Paginação das tabelas
        $.fn.paginationTableMain('#sys-users-table-list',15,2);

        //Criando um cookie para salvar sempre o que o
        //usuario digitar
        $("#input-search-table").keyup(function(){

            if($(this).val().length <  1){
                Cookies.remove('SEARCH-INPUT')    
            }

            Cookies.set('SEARCH-INPUT', $(this).val())

        })

        //Filtro dinamico em inputs
        $.fn.searchInputTableInputs('#sys-users-table-list','#input-search-table')

        $(".save-new-name").keyup(function() {
            var valor = $(this).val().replace(/[^a-zA-Z 0-9]+/g,'');
            $(this).val(valor);
        });
    })

</script>