        $("#sys-partial-profile-recover-pass").fadeIn();
        $("#sys-partial-profile-recover-pass").css("display","flex");
    })

    $("#sys-partial-profile-recover-close").click(function(){
        $("#sys-partial-profile-recover-pass").fadeOut();
    })
    
    $('#update-cpf').mask('000.000.000-00');

    /* ********************* */
