<script>

    //O usuario precisa terminar seu cadastro
    const validadeRegister = '<%- PROFILE_FINALYT %>';
    if(validadeRegister == 'true'){
        //Precisa
        $("#sys-partial-profile").fadeIn().css('display','flex')
        $("#sys-partial-close-profile").fadeOut()
    }else{
        $("#sys-partial-close-profile").css({'display': 'flex'})
    }

    //Close menu
    $("#sys-partial-close-profile").click(function(){
        $("#sys-partial-profile").fadeOut()
    })

    //Opnem menu
    $("#sys-partial-open-profile").click(function(){
        $("#sys-partial-profile").fadeIn().css({'display': 'flex'})
        $("#li-info-user-drop").fadeOut()
        $("#toggle-user").toggleClass('rotate-90')
    })

    //Pegando as informaÃ§Ãµes via socket
    socket.emit("getInfoUserProfile", '<%- GLOBAL_DASH[0] %>');
    socket.on('getInfoUserProfileResult', (resultData) => {
        //alert(resultData)

        $.fn.loadSpin(0)

        //Adicionando os dados
        if(resultData[0].jcv_userImageIcon != null){
            $("#input-edit-img").attr('src', resultData[0].jcv_userImageIcon).css({'cursor': 'pointer', 'background': 'transparent'})
        }else{
            $("#input-edit-img").css({'cursor': 'pointer', 'background': 'var(--color-one)'})
        }

        $("#updateNameUser").val(resultData[0].jcv_userNamePrimary)
        $(".updateCPFUser").val(resultData[0].jcv_userCpf)

        if(resultData[0].jcv_userEmailCorporate == ''){
            $("#updateEmailUserCorp-title").css({'color':'red'})
            $("#updateEmailUserCorp").css({'color':'red'})
        }else{
            $("#updateEmailUserCorp").val(resultData[0].jcv_userEmailCorporate)
        }

        $("#updateEmailUserPer").val(resultData[0].jcv_userEmailFolks)
        $("#updateRamalUser").val(resultData[0].jcv_userExtension)

        if(resultData[0].jcv_sysEmail == 1){
            $(".updateAppsUser").prop('checked', true)
        }else{
            $(".updateAppsUser").prop('checked', false)
        }

        //Recovery pass
        $("#name-recovery-pass").text(resultData[1])

        //Avataars
        if(resultData[0].jcv_userImageIcon == '' || resultData[0].jcv_userImageIcon == null){
            $("#avataars-image").attr('src','https://avataaars.io/?avatarStyle=Circle&topType=NoHair&accessoriesType=Blank&facialHairType=Blank&clotheType=ShirtCrewNeck&clotheColor=White&eyeType=Default&eyebrowType=Default&mouthType=Eating&skinColor=Light')
        }else{
            $("#avataars-image").attr('src',resultData[0].jcv_userImageIcon)
        }
        
    })
    
    //Sistema de avataars
